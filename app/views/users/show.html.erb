<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user, size: 70 %>
				<%= @user.name %>
			</h1>
			<p>
				<%= @user.email %><br/>
				<% if @user.admin == true %>
					<mark>Adminstrator</mark>
				<% else %>
					<mark>User</mark>
				<% end %>
			</p>
		</section>	
	</aside>
</div>
